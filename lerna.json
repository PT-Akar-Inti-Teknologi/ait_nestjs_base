{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "includeDependents": false
    },
    "publish": {
      "includeDependents": false
    },
    "watch": {
      "ignore": "dist/**"
    }
  }
}
